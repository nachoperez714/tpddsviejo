				{{/each}}
			</select>
		</div>

			<div class="form-group col-md-6">		
			<label for="nombre">Empresas</label>
			<select name="empresas" class="form-control" size="5" multiple required>
				{{#each empresas}}
				<option value= {{nombre}}> {{nombre}}</option>
				{{/each}}
			</select>
		</div>
		<div class="container" style="width:20%">
			<input class="btn btn-primary" type="submit" value="Aplicar">
		</div>
	</div>

	<div class="table-responsive">
		<h3>Ranking de empresas</h3>
	<table class="table">
		<tr>
